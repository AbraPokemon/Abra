ready = ->
  $('#ri-grid').gridrotator w1024:
    rows: 4
    columns: 16

  labels = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ'
  labelIndex = 0
  map = 0
  icons = iconEvent:
    url: "<%= image_path 'map-marker.png' %>"
    scaledSize: new (google.maps.Size)(30, 42)
    origin: new (google.maps.Point)(0, 0)
    anchor: new (google.maps.Point)(17, 34)

  addMarker = (location, map, type, event) ->
    marker = new (google.maps.Marker)(
      position: location
      icon: icons[type]
      map: map)

    viewDetail = ->
      window.location.href = '/events/' + event.id
      return

    marker.addListener 'click', viewDetail
    return

  showPosition = (position) ->
    location_gmap = 
      lat: position.coords.latitude
      lng: position.coords.longitude
    map = new (google.maps.Map)(document.getElementById('map'),
      zoom: 12
      center: location_gmap
      scrollwheel: false)
    addMarker location_gmap, map, 'Ví trị của bạn'
    $.ajax
      url: 'events/near_me?lat=10.788517&lon=106.742839'
      type: 'GET'
      success: (data) ->
        $.each data, (k, v) ->
          location_gmap =
            lat: v.latitude
            lng: v.longitude
          addMarker location_gmap, map, 'iconEvent', v
          return
        return
    return

  if navigator.geolocation
    navigator.geolocation.getCurrentPosition showPosition
  return

  google.maps.event.addDomListener window, 'load', initialize

$(document).on('page:change', ready)
