<p> Hi <%= @fd.donor.full_name %>,</p>
<p>You have donated successful to the event</p>
<table width="600" bgcolor="#cccccc">
  <tbody>
    <tr>
      <td align="center" valign="top">
        <table width="500" bgcolor="#ffffff" border="0" cellpadding="0" cellspacing="0" valign="top" style="overflow:hidden!important;border-radius:3px">
          <tbody>
            <tr>
              <td align="center" width="500"><%= image_tag attachments['charity.jpg'].url %></td>
            </tr>
            <tr>
              <td><h3><%= @fd.donatable.name %></h3></td>
            </tr>
            <tr>
              <td><%= @fd.donatable.short_description %></td>
            </tr>      
          </tbody>
        </table>
      </td>
    </tr>
    <tr height="40"><td>&nbsp;</td></tr>
    <tr>
      <td bgcolor="#ffffff"><h1>Similar event</h1></td>
    </tr>
    <% @recommendedEvent.each do |re| %>
      <tr height="40"><td>&nbsp;</td></tr>
      <tr>
        <td align="center" valign="top">
          <table width="500" bgcolor="#ffffff" border="0" cellpadding="0" cellspacing="0" valign="top" style="overflow:hidden!important;border-radius:3px">
            <tbody>
              <tr>
                <td align="center" width="500"><%= image_tag attachments['charity.jpg'].url %></td>
              </tr>
              <tr>
                <td><h3><%= re.name %></h3></td>
              </tr>
              <tr>
                <td><%= re.short_description %></td>
              </tr>
            </tbody>
          </table>
        </td>
      </tr>
    <% end %>
  </tbody> 
</table>
