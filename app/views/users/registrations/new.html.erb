<div class="registration wrapper">
  <div class="registration-banner">

  </div>
  <div class="registration_form">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.email_field :email, autofocus: true, placeholder: "Email"%>

      <%= f.text_field :full_name, placeholder: "Full name"%>

      <!-- <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br /> -->
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>

      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password confirmation" %>

      <%= f.text_field :location, placeholder: "Location" %>

      <%= f.submit "Register", class: "submit" %>
    <% end %>
  </div>
</div>
