<div class="register_dropdown">
  <div>
    <a href="#" class="link text-left icon register_link_dropdown"><i class="fa fa-sign-in"></i>Sign Up</a>
  </div>
  <div class="dropdown">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: 'register_form' } ) do |f| %>
      <div class="controls">
        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "required" %>
      </div>
      <div class="controls">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "required", data: { 'min-chars': 8 }%>
      </div>
      <div class="controls">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password confirmation", class: "required", data: { 'min-chars': 8 } %>
      </div>
      <%= f.submit "Register", class: "btn-register" %>
    <% end %>
  </div>
</div>
