<div class="register_dropdown">
  <div>
    <a href="#" class="link text-left icon register_link_dropdown"><i class="fa fa-sign-in"></i><%= t("authen.sign_up") %></a>
  </div>
  <div class="popup signup" id="signup_dialog">
    <h3>Welcome to join with us</h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: 'register_form' } ) do |f| %>
      <div class="controls">
        <i class="fa fa-envelope-o"></i>
        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "required" %>
      </div>
      <div class="controls">
        <i class="fa fa-lock"></i>
        <%= f.password_field :password, autocomplete: "off", placeholder: "#{t("authen.form.password")}", class: "required", data: { 'min-chars': 8 }%>
      </div>
      <div class="controls">
        <i class="fa fa-lock"></i>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "#{t("authen.form.password_confirmation")}", class: "required", data: { 'min-chars': 8 } %>
      </div>
      <%= f.submit "#{t("authen.form.register")}", class: "button main" %>
    <% end %>
  </div>
</div>
