<% if signed_in? %>
  <%= form_for [@event, Comment.new], remote: true do |f| %>
    <%= f.text_area :body, class: "inline top", placeholder: "Viết bình luận của bạn ..." %>
    <%= f.submit "Viết bình luận", class: "inline top button main" %>
  <% end %>
<% end %>
<ul>
  <% @event.comments.order(created_at: :desc).each do |comment| %>
    <li>
      <div class="comment-inner">
        <div class="avatar">
          <% if comment.user.avatar_url? %>
            <%= image_tag comment.user.avatar_url %>
          <% else %>
            <i class="fa fa-user-secret"></i>
          <% end %>
        </div>
        <div class="main-comment">
          <h4><%= comment.user.email %></h4>
          <p><%= comment.body %></p>
          <span>29 phút </span>
        </div>
      </div>
    </li>
  <% end %>
</ul>
